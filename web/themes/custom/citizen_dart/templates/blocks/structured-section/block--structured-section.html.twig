{% extends 'block.html.twig' %}

{% block blockContent %}

  {{ attach_library('citizen_dart/page-structured-section') }}

  <div class="river-background">
    <img src="/themes/custom/citizen_dart/images/elements/river-home.svg" width="1618px" height="1366px" alt="decorative background shape of a river" />
  </div>

  {{ content|without('field_formatted_headline', 'body', 'field_program_finder', 'field_cta_image', 'field_cta_links')}}  

  <div class="cta-section" id="home-cta">
    <div class="cta-section-inner">
      <div class="column first">
        {{ content.field_formatted_headline }}
        {{ content.body }}
        {% if content.field_program_finder.0['#markup'] == "On" %}
          <div class="program-search home-program-search">
            <h3>{% trans %}What do you want to study?{% endtrans %}</h3>
            {{ drupal_block('program_search') }}
          </div>
        {% endif %}
      </div>
      <div class="column cta-image">
        {{ content.field_cta_image }}
      </div>
      <div class="column last">
        {{ content.field_cta_links }}
      </div>
    </div>
  </div>
  <div class="angle-cut"></div>
{% endblock %}
