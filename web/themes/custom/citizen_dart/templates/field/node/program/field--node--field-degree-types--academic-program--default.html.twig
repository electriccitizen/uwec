{% extends 'field.html.twig' %}

{% block fieldSingleNo %}
  <div class="program-details">
    <div>
      <h2>{% trans %}Program Details{% endtrans %}</h2>
      {% if element['#object'].field_degree_types.0.value %}
        <span>{% trans %}Degree Types{% endtrans %}</span>
        {{ element['#object'].field_degree_types.0.value }}
      {% endif %}

      {% if element['#object'].field_degree_level.0.value %}
        <span>{% trans %}Degree Level{% endtrans %}</span>
        {{ element['#object'].field_degree_level.0.value }}
      {% endif %}

      {% if element['#object'].field_program_type|length > 0 %}
        <div class="field available-as">
          <span>{% trans %}Available as{% endtrans %}</span>
        {%- for type in element['#object'].field_program_type -%}
          {% if not loop.first and loop.last %} {% trans %}or{% endtrans %} {% endif %}
          {{- type.entity.label -}}
          {% if (loop.length != 2) and not loop.last %},
          {% endif %}
        {%- endfor -%}
      </div>
      {% endif %}
    </div>
    <div>
      {% if element['#object'].field_program_length.0.value %}
        <span>{% trans %}Program Length{% endtrans %}</span>
        {{ element['#object'].field_program_length.0.value }}
      {% endif %}

      {% if element['#object'].field_delivery_mode.0 %}
        <span>{% trans %}In-person or online{% endtrans %}</span>
        {{ element['#object'].field_delivery_mode.entity.label }}
      {% endif %}

      {% if element['#object'].field_college.0 %}
        <span>{% trans %}College{% endtrans %}</span>
        {{ element['#object'].field_college.entity.label }}
      {% endif %}

      {% if element['#object'].field_campus.0 %}
        <span>{% trans %}Campus{% endtrans %}</span>
        {{ element['#object'].field_campus.entity.label }}
      {% endif %}

      {% if element['#object'].field_minor_required.0 %}
        <span>{% trans %}Requires a minor{% endtrans %}</span>
        {{ element['#object'].field_minor_required.0.value ? 'Yes' : 'No' }}
      {% endif %}

      {% if element['#object'].field_departments|length > 0 %}
        <span>{{ element['#object'].field_departments|length > 1 ? 'Departments'|t : 'Department'|t }}</span>
         {%- for department in element['#object'].field_departments -%}
          {{- department.entity.label -}}
          {% if not loop.last %},
          {% endif %}
        {%- endfor -%}
      {% endif %}
    </div>


{% endblock %}

