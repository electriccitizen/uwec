{% extends 'field.html.twig' %}

{% set courseInformation = {
	'#type': 'processed_text',
	'#text': element['#object'].field_courses_text.0.value,
	'#format': element['#object'].field_courses_text.0.format
} %}

{% block fieldSingleNo %}
  <div class="course-information">
    <h2>{% trans %}Sample Courses{% endtrans %}</h2>
    {{ courseInformation }}
  </div>
  <div class="sample-courses">
    {{ drupal_entity('paragraph', element['#object'].field_courses.0.target_id)}}
  </div>
{% endblock %}

