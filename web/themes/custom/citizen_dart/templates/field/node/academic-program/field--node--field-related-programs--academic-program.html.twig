{% extends 'field.html.twig' %}

{% block fieldMultiNoItems %}
  {% set title = element['#object'].title.0.value|lower %}
	<div class="related-intro">
		<h2>Related Programs</h2>
    {% if element['#object'].field_related_intro.0 %}
		  <p>{{ element['#object'].field_related_intro.0.value }}</p>
    {% endif %}
	</div>
  <div class="related-items">
    {%- for item in items -%}
      <div{{ item.attributes.addClass("related-item") }}>
        {% block fieldMultiNo %}
          {{- item.content -}}
        {% endblock %}
      </div>
    {%- endfor -%}
  </div>
{% endblock %}
