{% extends 'node.html.twig' %}

{% block nodeContent %}
	<div class="hero-slash"></div>
	<div class="content-col">
		<h1>{{ node.title.value }}</h1>
		<div class="contact-wrapper">
			<div>UW-Eau Claire - 
				{% for item in content.field_campus['#items'] %}
					{{ item.entity.label }}
					{%- if not loop.last -%}
						,
					{% endif %}
				{% endfor %}
				campus
				{%- if content.field_campus['#items']|length > 1 -%}
					es
				{%- endif -%}
			</div>
			<div>
				{{ content.field_employment_type.0['#plain_text'] }},
				{{ content.field_employment_category.0['#plain_text'] }}
			</div>
			{{ content.field_official_title }}
			{{ content.field_job_id }}
			{{ content.field_posted_on }}
			<div>
				Apply by: {{ content.field_apply_by.0 }}
				|
				To ensure consideration, completed applications must be received by deadline. However, screening may continue until position is filled.
			</div>
			<div>
				<a class="button" href="https://www.careers.wisconsin.edu/psc/careers/EMPLOYEE/UW_TAM/c/HRS_HRAM_FL.HRS_CG_SEARCH_FL.GBL?Page=HRS_CAREERS_FL&Action=U&FOCUS=Applicant&SiteId=3">Apply Now</a>
				<a class="button" href="https://www.wisconsin.edu/ohrwd/benefits/benefits-estimator/">Benefits Estimator</a>
			</div>
			<div class="social">
				Share with:
				<a href="https://www.facebook.com/sharer/sharer.php?u={{ url|url_encode }}">{{ source(directory ~ '/images/social-icons/facebook.svg') }}</a>
				<a href="https://twitter.com/intent/tweet?text={{ content.title.value|url_encode }}&url={{ url|url_encode }}&via=http://www.twitter.com/uweauclaire">{{ source(directory ~ '/images/social-icons/twitter.svg') }}</a>
				<a href="https://www.linkedin.com/shareArticle?mini=true&url={{ url|url_encode }}&title={{ content.title.value|url_encode }}&source=UWEC%20News">{{ source(directory ~ '/images/social-icons/linkedin.svg') }}</a>
				<a href="mailto:?subject={{ content.title.value|url_encode }}&amp;body={{ url|url_encode }}">Email</a>
			</div>
		</div>
		{{ content.body }}
	</div>
{% endblock %}