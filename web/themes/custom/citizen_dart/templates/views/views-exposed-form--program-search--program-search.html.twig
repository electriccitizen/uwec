{#
/**
 * @file
 * Theme override of a views exposed form.
 *
 * Available variables:
 * - form: A render element representing the form.
 *
 * @see template_preprocess_views_exposed_form()
 */
#}

{{ attach_library('citizen_dart/drawers') }}
<div class="views-exposed-form-inner">
	{% if q is not empty %}
	  {#
	    This ensures that, if clean URLs are off, the 'q' is added first,
	    as a hidden form element, so that it shows up first in the POST URL.
	  #}
	{{ q }}
	{% endif %}
	<div class="keyword-wrapper">
		{{ form.programs_fulltext }}
	</div>
	<div class="advanced-form">
		<a href="#" class="filter-toggle" aria-controls="advanced-filters" aria-expanded="false">Advanced Search</a>
		<div id="advanced-filters" class="advanced-form-inner" aria-hidden="true">
			<div class="advanced-form-inner-filters">
				{{ form|without('programs_fulltext','actions') }}
			</div>
		</div>
		{{ form.actions }}
	</div>
</div>