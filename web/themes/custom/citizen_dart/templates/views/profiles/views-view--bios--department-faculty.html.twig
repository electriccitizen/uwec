{% extends 'views-view.html.twig' %}

{% block viewRows %}
  {% if rows %}
  	<h2 class="block-title">Meet the Faculty</h2>
    <div class="view-content">
      {{ rows }}
    </div>
    {% if view.args.0 %}
	    {% set currentNode = drupal_entity('node',view.args.0) %}
	    <div class="more-link">
	    	<a href="{% block filterURL %}{{ path('entity.node.canonical',{'node':'34'}) }}?profiles_fulltext=&title={% endblock %}{{ currentNode['#node'].title.0.value|replace({' ':'+','&':'%26'}) }}">Meet all the {{ currentNode['#node'].title.0.value }} {% block facultyType %}{% endblock %} faculty</a>
	    </div>
	  {% endif %}
  {% endif %}
{% endblock %}
